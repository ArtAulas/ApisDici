def fatorial(n):
    if n<=1:
        return 1

    menor=fatorial(n-1)
    return (menor*n)

def log_tosco(n):
    if n<=1:
        return 0
    if n==2:
        return 1
    
    menor=log_tosco(n/2)
    return menor+1

def maximo(lista):
    max=lista[0]
    if len(lista)==1:
        return max
    
    prox_max=maximo(lista[1:])
    if max<prox_max:
        return prox_max
    return max

def inverte(palavra):
    if len(palavra)<=1:
        return palavra
    
    prox=inverte(palavra[1:])
    nova_palavra=prox+palavra[0]
    return nova_palavra


def eh_lista(a):
    return type(a)==list


def acha_segredo(lista):
    if 'segredo' in lista:
        return True
    for valor in lista:
        if eh_lista(valor):
            lista_menor=acha_segredo(valor)
            if lista_menor:
                return lista_menor
    return False
